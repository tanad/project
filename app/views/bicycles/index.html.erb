<p id="notice"><%= notice %></p>

<h1>Listing Bicycles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>String</th>
      <th>Description</th>
      <th>Image url</th>
      <th>Price</th>
      <th>Category</th>
      <th>Available</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bicycles.each do |bicycle| %>
      <tr>
        <td><%= bicycle.title %></td>
        <td><%= bicycle.string %></td>
        <td><%= bicycle.description %></td>
        <td><%= bicycle.image_url %></td>
        <td><%= bicycle.price %></td>
        <td><%= bicycle.category %></td>
        <td><%= bicycle.available %></td>
        <td><%= link_to 'Show', bicycle %></td>
        <td><%= link_to 'Edit', edit_bicycle_path(bicycle) %></td>
        <td><%= link_to 'Destroy', bicycle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bicycle', new_bicycle_path, class: "btn btn-primary" %>
